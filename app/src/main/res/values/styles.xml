<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Eljoud" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:background">@color/bg</item>-->
        <!--<item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.Eljoud.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Widget.Eljoud.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Eljoud.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextAppearance.Eljoud.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Eljoud.Button.Red" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/red</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/next_animator
        </item>
    </style>

    <style name="Widget.Eljoud.Button.Purple" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/next_animator
        </item>
    </style>

    <style name="Widget.Eljoud.Button.White" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">80dp</item>
        <item name="android:borderlessButtonStyle">@color/white</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/next_animator
        </item>
    </style>

    <style name="Widget.Eljoud.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="Widget.Eljoud.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:theme">@style/Theme.Eljoud</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Eljoud.Toolbar</item>
    </style>

    <style name="TextAppearance.Eljoud.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Eljoud.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Eljoud.Backdrop" parent="">
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ImagePickerTheme" parent="ef_BaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>