<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".profile.ProfileFragment">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:paddingStart="130dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">

                    <itboom.com.elgoud.views.EljoudTextView
                        android:id="@+id/actualName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/username"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"/>

                    <itboom.com.elgoud.views.EljoudTextView
                        android:id="@+id/actualMail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:textColor="@color/white"
                        android:layout_marginStart="20dp"
                        android:textSize="15sp"/>

                </LinearLayout>

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/userImage"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_gravity="bottom|start"
                    android:layout_marginStart="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/def_pp"
                    app:riv_border_color="@color/white"
                    app:riv_border_width="2dp"
                    app:riv_corner_radius="22dp" />

                <ImageView
                    android:layout_gravity="bottom|start"
                    android:layout_marginStart="120dp"
                    android:layout_marginBottom="0dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ico_18"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1.3">

                    <itboom.com.elgoud.views.EljoudTextView
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="@string/username"
                        android:textSize="18sp"/>

                    <itboom.com.elgoud.views.EljoudTextView
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="@string/email"
                        android:textSize="18sp"/>

                    <itboom.com.elgoud.views.EljoudTextView
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="@string/mob_number"
                        android:textSize="18sp"/>

                    <!--<itboom.com.elgoud.views.EljoudTextView-->
                    <!--android:layout_margin="10dp"-->
                    <!--android:gravity="center"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="35dp"-->
                    <!--android:text="@string/password"-->
                    <!--android:textSize="18sp"/>-->

                </LinearLayout>

                <LinearLayout
                    android:paddingEnd="10dp"
                    android:paddingStart="0dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1.7">

                    <FrameLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/edit_text_bg">

                        <itboom.com.elgoud.views.EljoudEditText
                            android:id="@+id/username"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/username"
                            android:textSize="12sp"
                            android:inputType="textPersonName"
                            android:textColor="@color/black"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ico_19"
                            android:layout_gravity="end" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/edit_text_bg">

                        <itboom.com.elgoud.views.EljoudEditText
                            android:id="@+id/email"
                            android:enabled="false"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/email"
                            android:textSize="12sp"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/black"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ico_19"
                            android:layout_gravity="end" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/edit_text_bg">

                        <itboom.com.elgoud.views.EljoudEditText
                            android:id="@+id/mobile"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/mob_number"
                            android:inputType="number"
                            android:textSize="12sp"
                            android:textColor="@color/black"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ico_19"
                            android:layout_gravity="end" />
                    </FrameLayout>

                    <!--<FrameLayout-->
                    <!--android:layout_margin="10dp"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="35dp"-->
                    <!--android:background="@drawable/edit_text_bg">-->

                    <!--<itboom.com.elgoud.views.EljoudEditText-->
                    <!--android:id="@+id/password"-->
                    <!--android:paddingStart="10dp"-->
                    <!--android:paddingEnd="10dp"-->
                    <!--android:background="@android:color/transparent"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:hint="@string/password"-->
                    <!--android:inputType="textPassword"-->
                    <!--android:textAlignment="viewStart"-->
                    <!--android:textColor="@color/black"/>-->

                    <!--<ImageView-->
                    <!--android:layout_width="20dp"-->
                    <!--android:layout_height="20dp"-->
                    <!--android:background="@drawable/ico_19"-->
                    <!--android:layout_gravity="end" />-->
                    <!--</FrameLayout>-->

                </LinearLayout>

            </LinearLayout>

            <itboom.com.elgoud.views.EljoudButton
                android:id="@+id/save_btn"
                style="@style/Widget.Eljoud.Button.Red"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:cornerRadius="20dp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>