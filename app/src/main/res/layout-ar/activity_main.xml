<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <include layout="@layout/toolbar" android:id="@+id/toolbar"/>

    <FrameLayout
        android:id="@+id/appContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="57dp"/>

    <FrameLayout
        android:visibility="gone"
        android:alpha="0.97"
        android:id="@+id/sideMenuContainer"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="57dp">

        <FrameLayout
            android:background="@drawable/grad_bg"
            android:layout_width="240dp"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/profilePic"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:src="@drawable/def_pp"
                        app:riv_corner_radius="20dp"
                        app:riv_border_width="2dp"
                        app:riv_border_color="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"/>

                    <itboom.com.elgoud.views.EljoudTextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/username"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_marginTop="5dp"
                        />

                    <itboom.com.elgoud.views.EljoudTextView
                        android:textColor="@color/white"
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/username"
                        />

                    <LinearLayout
                        android:id="@+id/profile"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="5dp">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ico_10"
                            android:backgroundTint="@color/yellow"/>

                        <itboom.com.elgoud.views.EljoudTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile"
                            android:textColor="@color/white"
                            android:layout_marginStart="15dp"
                            android:layout_gravity="center_vertical"
                            android:textSize="18sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/my_courses"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="5dp"
                            android:background="@drawable/ico_13"
                            android:backgroundTint="@color/yellow"/>

                        <itboom.com.elgoud.views.EljoudTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:text="@string/my_courses"
                            android:textColor="@color/white"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/course_schedule"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="3dp">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="2dp"
                            android:background="@drawable/ico_15"
                            android:backgroundTint="@color/yellow"/>

                        <itboom.com.elgoud.views.EljoudTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="15dp"
                            android:text="@string/courses_date"
                            android:textColor="@color/white"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/contact_us"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="5dp">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/contact"
                            android:backgroundTint="@color/yellow"/>

                        <itboom.com.elgoud.views.EljoudTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/contact_us"
                            android:textColor="@color/white"
                            android:layout_marginStart="15dp"
                            android:layout_gravity="center_vertical"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/logout"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="3dp">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/logout"
                            android:backgroundTint="@color/yellow"/>

                        <itboom.com.elgoud.views.EljoudTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/logout"
                            android:textColor="@color/white"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center_vertical"
                            android:textSize="18sp"/>
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_marginStart="-210dp"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginTop="79dp"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="57dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_2"/>

                <itboom.com.elgoud.views.EljoudTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/username"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"/>

                <itboom.com.elgoud.views.EljoudTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"/>


                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ico_10"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@color/yellow"/>

                    <itboom.com.elgoud.views.EljoudTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ico_13"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@color/yellow"/>

                    <itboom.com.elgoud.views.EljoudTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_courses"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ico_15"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@color/yellow"/>

                    <itboom.com.elgoud.views.EljoudTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/courses_date"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ico_16"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@color/yellow"/>

                    <itboom.com.elgoud.views.EljoudTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_us"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ico_17"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@color/yellow"/>

                    <itboom.com.elgoud.views.EljoudTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/logout"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_11"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="3dp"/>

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:menu="@menu/navigation"
        android:layout_gravity="bottom"
        app:itemIconTint="@drawable/bottom_nav_selected"
        app:itemTextColor="@drawable/bottom_nav_selected"
        android:background="@color/colorPrimaryDark" />

</FrameLayout>