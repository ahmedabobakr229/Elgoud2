<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@drawable/grad_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notification"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ico_8"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <FrameLayout
            android:id="@+id/notificationBannerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@color/red"
                app:riv_corner_radius="13dp"
                android:layout_marginEnd="10dp"/>

            <itboom.com.elgoud.views.EljoudTextView
                android:id="@+id/notificationNumber"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textAlignment="center"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true">

            <itboom.com.elgoud.views.EljoudEditText
                android:id="@+id/searchText"
                android:background="@drawable/search_bg"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:hint="@string/search"
                android:paddingStart="35dp"
                android:paddingEnd="10dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ico_21"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="10dp"/>

        </FrameLayout>

        <ImageView
            android:id="@+id/sideMenu"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ico_9"
            android:padding="10dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/back"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <itboom.com.elgoud.views.EljoudTextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/home"
        android:textSize="17sp"
        android:layout_gravity="bottom|center_horizontal" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/yellow"/>
</LinearLayout>